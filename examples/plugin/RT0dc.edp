load "Element_Mixte"

mesh Th=square(2,2);

fespace Vh(Th,RT0dc);

Vh [u1,u2];
Vh [v1,v2];
int nerr=0; 
for (int i=0;i<Vh.ndof;++i)
{
	u1[]=0;
	u1[][i]=i;
	[v1,v2]=[u1,u2];
	plot([u1,u2],wait=1,cmm=" dof "+i);
	real[int] d=u1[]-v1[]; 
	real err= d.linfty ;
	if (err > 1e-10)
	{
		nerr++;
		cout << " bug dof"<< i << " "<< v1[] << endl; 
	}
	
}
assert(nerr==0); 
