set -e
gittag=`git describe --tags`
source bin/init-var.sh 
gittag=`git describe --tags`
echo which FreeFem++:
ffpp=`which FreeFem++`
echo FreeFem++:  $ffpp
machine=`machine`
conf=`./config.status --config`
arch=xxx
case $machine in
arm64e)
 arch=M1;;
x86_64)
  arch=intel;;
*)
  echo unknow machine $machine
  exit 1;;
esac
echo " arch = $arch"

name=FreeFEM-$version-Apple-$arch-$gittag
echo name of git for  dmg: FreeFEM-$version-Apple-$arch-$gittag

sudo make install
make bin/movefortranlib
./bin/movefortranlib
mkdir $fftmp/$name
cp -r $ffapp $fftmp/$name
