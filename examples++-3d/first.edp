  for (int i=0;i<nbvertices;i++)
	cout << "Th(" <<i  << ") : "   // << endl;	
	     << Th(i).x << " " << Th(i).y  << " " << Th(i).z << " " << Th(i).label // version 2.19 
	  << endl;
savemesh(Th,"dd.mesh");
 }
fespace Vh(Th,P13d);
func f=x+2*y+10*z;
Vh u=f,b;
cout << u(0.1,0.2,0.3)<< "  == " << f(0.1,0.2,0.3) << endl; ;
macro Grad3(u) [dx(u),dy(u),dz(u)]  // EOM
varf vlap(u,v) = int3d(Th)(Grad3(v)' *Grad3(u)) + int3d(Th)(f*v) + on(1,u=0);
matrix A=vlap(Vh,Vh);
b[]=vlap(0,Vh);
u[]=A^-1*b[];
cout << u[]. min << " " << u[].max << endl;
Vh2 u2=u;
plot(u2,wait=1);
plot(u2,wait=1);
