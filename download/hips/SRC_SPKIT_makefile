HIPS_DIR = ../..
include $(HIPS_DIR)/makefile.co

ifneq ($(FC),true)
	TMP   = skitfc.f90 skitf.f90
	OBJ   = $(TMP:.f90=.o)
else
	OBJ   = 
endif

default: $(OBJ)
ifneq ($(FC),true)
	$(AR) $(ARFLAGS) $(LIBSPKIT) $(OBJ)
endif

%.o: %.f90
	$(FC) $(FC_OPT) $< -c -o $@

skitfc.f90: template-skitfc.F90
	$(CPP) $(CFLAGS) $(CC_OPT) $< > $@

skitf.f90: template-skitf.F90
	$(CPP) $(CFLAGS) $(CC_OPT) $< > $@

clean:
	rm -f $(TMP) *.o *.ex* *core ./extras/core* out* \#*  *~











